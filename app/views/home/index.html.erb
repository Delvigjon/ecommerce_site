<div class="products-section">
  <div class="section-header text-center">
    <h2 class="section-title">Nos produits populaires</h2>
    <p class="section-description">Découvrez une sélection de nos produits les plus appréciés par nos clients.</p>
  </div>

  <div class="products-grid">
    <% @products.each do |product| %>
      <div class="product-card">
        <!-- Image du produit -->
        <%= image_tag "products/#{product.image_url}", alt: product.name, class: "product-image" if product.image_url.present? %>

        <!-- Détails du produit -->
        <div class="product-details">
          <h3 class="product-name"><%= product.name %></h3>
          <p class="product-price"><%= number_to_currency(product.price, unit: "€", format: "%n %u") %></p>
          <%= link_to 'Voir le produit', product_path(product), class: 'btn btn-secondary btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="cta-section">
  <div class="cta-container text-center">
    <h2 class="cta-title">Profitez de nos offres exclusives</h2>
    <p class="cta-description">Ne manquez pas nos offres exclusives sur nos meilleurs produits. Cliquez ci-dessous pour en savoir plus.</p>
    <%= link_to 'Voir toutes les offres', offers_path, class: 'btn btn-primary' %>
  </div>
</div>
